<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/itemToUpdateTextView"
        android:layout_width="374dp"
        android:layout_height="56dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/enterNewPriceView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="18dp" />

    <Button
        android:id="@+id/updatePriceButton"
        android:layout_width="140dp"
        android:layout_height="46dp"
        android:text="Update"
        app:layout_constraintBottom_toTopOf="@+id/cancelUpdateButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterNewPriceView"
        tools:layout_editor_absoluteX="135dp" />

    <Button
        android:id="@+id/cancelUpdateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updatePriceButton"
        tools:layout_editor_absoluteX="161dp" />

    <EditText
        android:id="@+id/enterNewPriceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter new price"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/updatePriceButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemToUpdateTextView"
        tools:layout_editor_absoluteX="100dp" />

</androidx.constraintlayout.widget.ConstraintLayout>